		$sql=mysql_query("SELECT * FROM tbl_qcf WHERE no_order LIKE '$Order' AND no_po LIKE '$PO' AND no_hanger LIKE '$Item' AND warna LIKE '$Warna' AND pelanggan LIKE '$Langganan' $Where $Dly");
	}
	$col=0;
